{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "composite": true,
        "types": [
            "jest",
            "@testing-library/jest-dom"
        ],
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "bundler"
    },
    "include": [
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/setupTests.d.ts"
    ]
}